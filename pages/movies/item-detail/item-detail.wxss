/* pages/movies/item-detail/item-detail.wxss */
@import "../star-template/star-template.wxss"

.cover-img {
    position: absolute;
    width: 100%;
    height: 350rpx;
    filter: blur(10rpx);
    z-index: -1;
    top: 0px;
}

.cover-right-img {
    position: absolute;
    right: 20px;
    top: 60px;
    width: 100px;
    height: 150px;
}

.head-container {
    display: flex;
    flex-direction: column;
    margin-left: 20px;
    margin-top: 30px;
}

.head-container text {
    margin-bottom: 10px;
}

.head-like-comment {
    margin-top: 20px;
}

.head-like-comment text {
    margin-right: 5px;
}

.introduce-container {
    display: flex;
    flex-direction: column;
    margin-top: 60px;
    margin-left: 20px;
}

.introduce-container text {
    margin: 10px 20px 0 0;
}