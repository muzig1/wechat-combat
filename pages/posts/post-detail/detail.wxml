<view class="container">
    <image class="head-img" src="{{head_img}}" />
    <image class="audio" src="/images/music/music-start.png" />
    <view class="author-date">
        <image class="avatar" src="{{avatar_img}}" />
        <text class="author">{{author_name}}</text>
        <text class="const-txt">发表于</text>
        <text class="date">{{date}}</text>
    </view>
    <text class="title">{{title}}</text>
    <view class="tool">
        <view>
            <image src="/images/icon/collection.png" />
            <image src="/images/icon/share.png" />
        </view>
        <view class="horizon"></view>
    </view>
    <text class="detail">{{detail}}</text>
</view>