.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  align-self: center;
  top: 180rpx;
  opacity: 0.6;
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-txt {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-left: 30rpx;
}

.tool image {
  float: right;
  width: 100rpx;
  height: 100rpx;
  margin-right: 40rpx;
  vertical-align: middle;
}

.horizon {
  width: 660rpx;
  height: 2rpx;
  background-color: #e3e3e3;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
